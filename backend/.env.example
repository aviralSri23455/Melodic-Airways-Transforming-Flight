# ==========================================
# üõ∞Ô∏è Aero Melody Backend Environment Variables
# Description: Flight route to music generation API using OpenFlights dataset
# ==========================================

# ------------------------------------------
# ‚öôÔ∏è Project Settings
# ------------------------------------------
PROJECT_NAME=Aero Melody API
VERSION=1.0.0
DESCRIPTION=Flight route to music generation API using OpenFlights dataset

# ------------------------------------------
# üîó API Settings
# ------------------------------------------
API_V1_STR=/api/v1
SECRET_KEY=your_secret_key_here_change_this_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=480

# ------------------------------------------
# üñ•Ô∏è Server Settings
# ------------------------------------------
HOST=0.0.0.0
PORT=8000
DEBUG=false

# ------------------------------------------
# üåç CORS Settings (comma-separated list for production)
# ------------------------------------------
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ------------------------------------------
# üßÆ Database Pool Settings
# ------------------------------------------
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# ------------------------------------------
# üîê JWT Settings
# ------------------------------------------
JWT_SECRET_KEY=your_jwt_secret_key_here_change_this_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=480

# ------------------------------------------
# üö¶ Rate Limiting (Production settings)
# ------------------------------------------
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# ------------------------------------------
# üìÅ File Upload Settings
# ------------------------------------------
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=uploads
MIDI_OUTPUT_DIR=midi_output

# ------------------------------------------
# üåê External API Settings
# ------------------------------------------
OPENFLIGHTS_BASE_URL=https://raw.githubusercontent.com/MariaDB/openflights/master/data

# ------------------------------------------
# üé∂ Music Generation Settings
# ------------------------------------------
DEFAULT_TEMPO=120
DEFAULT_SCALE=major
DEFAULT_KEY=C
MAX_POLYPHONY=8

# ------------------------------------------
# ü™µ Logging Settings
# ------------------------------------------
LOG_LEVEL=WARNING
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ------------------------------------------
# üîí SSL/TLS Settings (Configure for production)
# ------------------------------------------
SSL_CERT_FILE=/path/to/your/cert.pem
SSL_KEY_FILE=/path/to/your/key.pem

# ------------------------------------------
# üê¨ MariaDB Database Configuration
# ------------------------------------------
DATABASE_URL=mysql://DB_USER:DB_PASSWORD@DB_HOST:DB_PORT/DB_NAME

# Individual Database Credentials
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password_here
DB_NAME=melody_aero

# ------------------------------------------
# ‚ö° Redis Configuration
# ------------------------------------------
# For local development (Redis without authentication)
# REDIS_URL=redis://localhost:6379

# For production (Redis Cloud or secured Redis)
REDIS_URL=redis://default:your_redis_password@your-redis-host:6379
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_CACHE_TTL=1800        # 30 minutes
REDIS_SESSION_TTL=7200      # 2 hours
REDIS_MAX_CONNECTIONS=10

# ------------------------------------------
# üíæ DuckDB Analytics Configuration
# ------------------------------------------
DUCKDB_PATH=./data/analytics.duckdb
DUCKDB_MEMORY_LIMIT=2GB
DUCKDB_THREADS=4
