[mysqld]
# Basic settings for free MariaDB
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
innodb_buffer_pool_size = 1G
innodb_log_file_size = 256M
max_connections = 1000

# Performance optimizations for JSON operations
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT
query_cache_type = 1
query_cache_size = 64M

# JSON and text search optimizations
innodb_ft_min_token_size = 3
innodb_ft_max_token_size = 84
ft_min_word_len = 3
ft_max_word_len = 84

# Logging for development
general_log = 0
slow_query_log = 1
slow_query_log_file = /var/lib/mysql/mysql-slow.log
long_query_time = 2

# SSL settings (configure as needed for production)
# ssl_cert = /etc/mysql/certs/server-cert.pem
# ssl_key = /etc/mysql/certs/server-key.pem
# ssl_ca = /etc/mysql/certs/ca-cert.pem
# require_secure_transport = ON

# Memory settings for better JSON performance
max_length_for_sort_data = 4096
sort_buffer_size = 256K
join_buffer_size = 256K
read_buffer_size = 256K
read_rnd_buffer_size = 512K

# Temporary table settings for complex queries
tmp_table_size = 64M
max_heap_table_size = 64M

# Connection and thread settings
thread_cache_size = 8
table_open_cache = 4096
table_definition_cache = 4096
open_files_limit = 65536
