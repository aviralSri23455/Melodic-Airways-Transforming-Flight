# Aero Melody Backend Environment Variables

# Project Settings
PROJECT_NAME=Aero Melody API
VERSION=1.0.0
DESCRIPTION=Flight route to music generation API using OpenFlights dataset

# API Settings
API_V1_STR=/api/v1
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS Settings (comma-separated list for production)
BACKEND_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database Pool Settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Security Configuration
SECRET_KEY=your_app_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=480

# Rate Limiting (Production settings)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=uploads
MIDI_OUTPUT_DIR=midi_output

# External API Settings
OPENFLIGHTS_BASE_URL=https://raw.githubusercontent.com/MariaDB/openflights/master/data

# Music Generation Settings
DEFAULT_TEMPO=120
DEFAULT_SCALE=major
DEFAULT_KEY=C
MAX_POLYPHONY=8

# Logging Settings (Production)
LOG_LEVEL=WARNING
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# SSL/TLS Settings (Configure for production)
SSL_CERT_FILE=/path/to/your/cert.pem
SSL_KEY_FILE=/path/to/your/key.pem

# Development Database (Local MariaDB - for development only)
DATABASE_URL=mysql://root:your_password_here@localhost:3306/melody_aero

# Redis Cloud Configuration (Production)
REDIS_URL=redis://default:your_redis_password_here@your_redis_host:your_redis_port
REDIS_HOST=your_redis_host
REDIS_PORT=your_redis_port
REDIS_USERNAME=default
REDIS_PASSWORD=your_redis_password_here
REDIS_CACHE_TTL=1800
REDIS_SESSION_TTL=7200
REDIS_MAX_CONNECTIONS=10

# DuckDB Analytics Configuration
DUCKDB_PATH=./data/analytics.duckdb
DUCKDB_MEMORY_LIMIT=2GB
DUCKDB_THREADS=4
